name: basic_cleaning #changed from download_data
conda_env: conda.yml

entry_points:
  main:
    parameters:
      input_artifact:
        description: Fully qualified name for the artifact
        type: str
      output_name:
        description: Name for the W&B artifact that will be created
        type: str
      output_type:
        description: Type of the artifact to create
        type: str
        default: raw_data
      output_description:
        description: Description for the artifact
        type: str
      save_clean_locally:
        description: Save file to local machine or not
        type: str
        default: False

    command: >-
      python run.py --input_artifact {input_artifact} \
                              --output_name {output_name} \
                              --output_type {output_type} \
                              --output_description {output_description} \
                              --save_clean_locally {save_clean_locally}
